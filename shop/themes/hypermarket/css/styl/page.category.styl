.s-category-wrapper
    position relative
    margin 0

    &:after
        content: ""
        visibility hidden

        position absolute
        top 0
        left 0

        display block
        width 100%
        height 100%

        background rgba(255,255,255,.0)
        transition background 200ms ease-in-out

    &.is-loading
        &:after
            visibility visible
            background rgba(255,255,255,.5)

    .s-category-header
        margin 0

    .s-category-empty
        margin 2em 0 0

    .s-description-section
        &.is-top
            margin-bottom $pad(2)
        &.is-bottom
            margin-top $pad(2)