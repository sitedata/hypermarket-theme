.s-reviews-page

    @import "./product.review.images.styl";

    .s-review-images-section
        border-radius $radius
        background #fff

    .s-reviews-header
        margin 0

    .s-form-section
        $block()

        & > .s-section-header
            background #fff
            padding 20px 50px

            font-size 16px
            line-height 20px
            font-weight 500
            color #5f5f5f

        & > .s-section-body
            padding 30px 50px
            background $getColor("background-gray")

        .comment-submit
            .s-cancel-button
                display none

        .s-adapters-section
            margin 0 0 1em 0

        .s-provider-fields
            $_pad = 1em

            & > .s-column
                padding 0 ($_pad*1/3)
                &:first-child
                    padding 0 ($_pad*2/3) 0 0
                &:last-child
                    padding 0 0 0 ($_pad*2/3)

        .s-review-field
            margin: $pad() 0 0
            &:first-child
                margin-top: 0

            .s-label
                position relative
                left 6px
                color $getColor("gray")
                font-size 13px

            label
                text-transform uppercase
                font-size: 0.8em

            &.service-agreement-wrapper
                label
                    text-transform none
                    font-size inherit

            textarea
                vertical-align top
                resize none
                height 200px

            &.user-name-block
                img
                    display inline-block
                    vertical-align middle
                    width: 20px
                    margin: 0 4px 0 0;
                    border-radius 50%

                .s-logout-link
                    margin 0 .5em

            &.reply-notification
                display none;

            .wa-captcha
                margin-top $pad()

            .s-rates-wrapper
                white-space nowrap
                margin: 0.25em 0 0

                .s-rate-item
                    margin 0 0 0 8px
                    cursor pointer

                    &.svg-icon
                        width 24px
                        height 24px

                    &:first-child
                        margin-left 0

        .s-errors-wrapper
            display none
            &.is-shown
                display block

            .error
                margin: 0.5em 0 0
                line-height 1.25em
                font-style italic

                &:first-child
                    margin-top 0

    .s-reviews-section
        &:not(:first-child)
            margin-top ($indent() + 20px)

        .s-reviews-list
            margin 0
            padding 0

            .s-review-wrapper
                margin $indent() 0 0
                padding 0
                list-style none
                &:first-child
                    margin-top 0

                .s-reviews-list
                    margin 20px 0 0 20px

            .s-review
                .s-title
                    margin 0 0 $pad()
                    font-weight 500

                .s-description
                    margin 0 0 $pad()

                .s-rates-wrapper
                    white-space nowrap

                    .s-rate-item
                        margin 0 0 0 4px
                        &:first-child
                            margin-left 0

                .s-author-name
                    font-size 12px
                    color #808080

                    .s-author-staff
                        padding 0

                .s-date-wrapper
                    margin 0
                    font-size 12px
                    color #808080

                .s-images-list
                    margin $pad() 0

                    .s-image-wrapper
                        display inline-block
                        vertical-align top
                        margin 0 15px 5px 0

                        .s-image
                            height 100px
                            vertical-align top

                .s-form-section
                    margin-top 20px

                    .s-rates-field
                        display none

                    .comment-submit
                        .s-cancel-button
                            display inline-block