$_arrow_width = 30px

.s-slider-section
    padding-bottom 20px

    &.with-border
        .bx-wrapper
            .bx-viewport
                border 1px solid #e3e3e3

    .bx-wrapper
        margin 0

        .bx-viewport
            top 0
            left 0
            padding 0
            overflow hidden
            box-shadow none
            border 0
            border-radius 5px
            box-sizing border-box

        .bx-pager.bx-default-pager
            top 100%
            bottom auto
            padding-top 10px
            box-sizing border-box
            font-size 0
            line-height 0

            .bx-pager-item
                display inline-block
                vertical-align top
                margin 0 0 0 5px
                &:first-child
                    margin-left 0

                a
                    display inline-block
                    vertical-align top
                    margin 0
                    border 1px solid rgba(0,0,0,.1)
                    box-sizing border-box
                    background #fff
                    border-radius 50%
                    transition background linear 200ms

                    &:hover
                    &.active
                        background: #f8e395 linear-gradient(to bottom, #f8e395 0%, #f7da6c 100%);

        .bx-controls-direction
            a
                $_arrow_h = 50px

                top 50%
                width $_arrow_width
                height $_arrow_h
                margin-top -($_arrow_h/2)
                background #000
                z-index auto
                opacity .3
                transition opacity 200ms linear

                &:hover
                    opacity 1

                &:after
                    $_icon_w = 12px
                    $_icon_h = 25px
                    content ""
                    position absolute
                    top 50%
                    left (($_arrow_width - $_icon_w)/2)
                    width $_icon_w
                    height $_icon_h
                    margin -($_icon_h/2) 0 0
                    background transparent 50% no-repeat

                &.bx-prev
                    border-radius 0 5px 5px 0
                    left 0
                    &:after
                        background-image url("../img/svg/arrow-left.svg")

                &.bx-next
                    border-radius 5px 0 0 5px
                    right 0
                    &:after
                        background-image url("../img/svg/arrow-right.svg")

    .s-slide-list
        margin 0
        padding 0
        height 320px

        .s-slide-wrapper
            margin 0
            padding 0
            height 100%

            .s-slide-block
                position relative
                padding 10px 60px
                margin 0
                width 100%
                height 100%
                box-sizing border-box
                overflow hidden

            .s-link
                display block
                position absolute
                top 0
                left 0
                width 100%
                height 100%

            .s-image
                display block
                position absolute
                top 0
                right 0
                width 50%
                height 100%
                background transparent 50% no-repeat
                background-size auto 100%

            .s-text-wrapper
                position relative
                display table
                width 50%
                height 100%
                table-layout fixed

                a
                    text-decoration none
                    color inherit

                .s-text-block
                    display table-cell
                    vertical-align middle
                    padding-right 8px

                .s-header
                    margin 0
                    font-size 30px
                    line-height 1em
                    font-weight 600
                    text-transform uppercase
                    color inherit

                .s-description
                    margin $pad() 0 0
                    font-size 14px
                    line-height 20px
                    color inherit

                .s-counter
                    margin-top 24px
                    .s-countdown-wrapper
                        color inherit
                        border-color inherit

                .s-price-wrapper
                    margin 20px 0 0

                    .s-price
                    .s-compare-price
                        display inline-block
                        vertical-align top
                        line-height 42px
                        white-space nowrap
                        color inherit

                    .s-price
                        font-size 32px
                        background #c43f60
                        padding 0 12px
                        border-radius $radius
                        color #fff

                    .s-compare-price
                        margin 0 0 0 14px
                        text-decoration line-through
                        font-size 24px
                        color #7f7f7f

            &.is-wide
                color #fff

                &:not(.is-promocard-slide)
                    .s-image
                        background-position 0 0

                .s-price-wrapper
                    .s-compare-price
                        color #fff;

                .s-image
                    width 100%
                    background-size cover

                .s-slide-block
                    .s-slide-background
                        display block
                        position absolute
                        top 0
                        left 0
                        width 100%
                        height 100%
                        background: rgba(0,0,0,.1) linear-gradient(to right, rgba(0,0,0,0.75) 0%, rgba(0,0,0,.1) 100%);

.s-countdown-wrapper
    $_color = #fff
    white-space: nowrap;
    color: $_color

    .s-count-item
        position: relative;
        display: inline-block;
        vertical-align: top;
        padding: 0 19px 0 0;
        text-align center

        &.last
            padding: 0;

        &:last-child
        &.last
            &:after
                display: none;

        &:after
            position: absolute;
            top: 0;
            right: 5px;
            display: inline-block;
            content: ":";
            font-size 32px
            line-height 56px

        .s-count
            display: block;
            min-width 55px
            height 60px
            padding 10px 5px

            border 1px solid $_color
            border-radius $radius
            box-sizing border-box
            font-size 32px
            line-height 40px

        .s-label
            display: block;
            font-size: 14px;
            line-height: 30px;