@import "nib";

@import "../../../../../site/themes/hypermarket/css/styl/include.styl"

$_green = #008000;
$_brown = #a52a2a;

$author($is_sidebar = false)
    position relative

    .h-author-block
        position relative
        text-align center
        padding 18px 20px $pad()

        .h-image-wrapper
            width 128px;
            margin: auto

            img
                vertical-align top
                width: 100%;

        .h-name-wrapper
            margin $pad() 0 0
            line-height 20px
            font-size 15px

            if !$is_sidebar
                overflow hidden
                height 60px

            .h-name-link
                &:after
                    content ""
                    display block
                    position absolute
                    top 0
                    left 0
                    width 100%
                    height 100%

            .h-staff
                vertical-align top
                margin 0 0 0 4px

        .h-kudos-wrapper
            margin $pad() 0 0

            .h-kudos
                font-size: 15px;

    .h-actions-list
        margin 0
        padding 18px 20px 17px
        background $getColor("background-gray")
        text-align left
        font-size 13px
        line-height 17px

        & > li
            position relative

            if $is_sidebar
                margin: 6px 0 0;
                &:first-child
                    margin-top 0

            &:before
                content: ""
                position absolute
                top ( (16 + 2)/2 - 2 - 1 )px
                right 100%
                display block
                width 4px
                height 4px
                margin 0 7px 0 0
                background $getColor("link")
                border-radius 50%
                box-sizing border-box

        .s-count
            margin-left 4px
            font-size: 10px;
            color: $getColor("gray")

