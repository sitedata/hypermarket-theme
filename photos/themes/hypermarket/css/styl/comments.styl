.s-comments-section
    margin $indent() 0 0
    $block()
    padding 30px

    font-size 14px
    line-height 20px
    background $getColor("background-gray")

    .comments
        .comments-header
            margin -30px -30px 30px -30px
            padding 30px
            background #fff
            font-size 16px
            line-height 20px
            font-weight 600

        .comment
            margin $pad() 0 0
            &:first-child
                margin-top 0

            &.in-reply-to
                background rgba(255,255,0,.05)
                margin: -8px -8px -13px;
                padding: 8px 35px 8px 8px;
                position: relative;

            &.new
                background rgba(0,255,0,.05)
                margin: -8px -8px -13px;
                padding: 8px 35px 8px 8px;

        .credentials
            position relative
            overflow: hidden;
            font-size 15px
            line-height: 20px;
            padding-left 28px

            & > *
                display inline-block !important
                vertical-align top
                padding 0 !important
                margin 0

            .userpic
                position absolute
                left 0
                top 0
                display inline-block
                vertical-align top
                width: 20px;
                border-radius: 50%;

            .username
            .username a
                font-weight 500

            .date
                font-size 1em
                $getColor("gray")

            .icon16
                margin: 0 3px;

        h4
            margin: 0 0 10px;

        textarea
            height: 100px;
            min-height: 100px;
            width: 75%;
            margin-top: 0;

        ul
            padding 0;
            margin $pad() 0 0 0;

            li
                padding 0;
                margin $pad() 0 0 0;
                list-style: none;
                &:first-child
                    margin-top 0

                ul
                    padding-left: $pad(2);

                span.hint a
                    color: #aaa;
                    text-decoration: underline;

                a.comment-delete
                    margin: 0 0 0 5px;
                    padding: 0;
                    color: #d99;
                    text-decoration: underline;

                    &:hover
                        background: red;
                        color: white;

                .comment-form
                    margin $indent() 0 0
                    padding 0

                    textarea
                        min-height: 100px;

        .text
            margin: 5px 0 0 32px;

        .actions
            margin: 5px 0 0 32px;
            a
            b
            i
                font-weight 400


    .comment-form
        padding: 0;
        margin-top: 30px;

        h4
            margin 0
            font-size 16px
            line-height 20px
            font-weight 600

        ul.auth-type
            margin $pad() 0 0
            padding: 0

            li
                margin 0
                padding 0
                display inline-block
                vertical-align top
                list-style: none;

                a
                    padding: 5px 6px;

                    img
                        vertical-align top
                        margin-right: 5px;

        .tab
            margin $pad() 0 0

            label
                display inline-block
                width 80px
                margin-right 8px

            input
                width 200px

        .userpic
            display inline-block
            vertical-align top
            width: 20px;
            height: 20px;
            border-radius: 50%;

        .comment-form-fields
            margin $pad() 0 0

            p
                font-size 15px
                line-height 20px

                a
                    display: inline !important;

            label
                color: #aaa;

            textarea
                margin 1em 0 0
                min-height: 100px;

        .comment-submit
            margin $pad() 0 0
            em.hint
                display none