@import "nib";

@import "../../../../../site/themes/hypermarket/css/styl/include.styl";

@import "albums.styl";

@import "photo.styl";

@import "photos.styl";

#gallery-nav
    text-align: center;
    margin-top: -20px;
    margin-bottom: 30px;

    ul.menu-h
        li
            float: none;
            display: inline-block;

    .popup
        max-width: 400px; max-height: 70%; overflow-y: scroll;

        ul.menu-v
            padding-left: 6px;

            li
                display: block; float: none; list-style: none; line-height: 1.3em; text-align: left;

                a
                    color: #03c;

                    &:hover
                        color: red;

                ul
                    padding-left: 15px; padding-top: 2px; font-size: 0.9em; margin-bottom: 10px;

                    li
                        float: none;

                        a
                            font-weight: normal;
.s-sidebar-wrapper
    .s-sidebar-block .s-sidebar-section > .s-section-footer
            padding 8px

    .s-albums-preview
        .s-albums-list
            margin 0
            padding 0

            .s-album-wrapper
                display inline-block
                vertical-align top
                width 50%
                margin 0
                padding 0
                list-style none
                box-sizing border-box

                &.is-active
                    border 2px solid #31b133

                    .s-album
                        .s-link
                            cursor default

                        &:before
                        .s-name
                            opacity 1

                .s-album
                    position relative
                    height 0
                    padding 0 0 100%
                    overflow hidden
                    background transparent 50% no-repeat
                    background-size cover

                    &:hover
                        &:before
                        .s-name
                            opacity 1

                    &:before
                        content ""
                        position absolute
                        top 0
                        left 0
                        width 100%
                        height 100%
                        background rgba(0,0,0,.66)
                        transition opacity 200ms linear
                        opacity 0

                    .s-name
                        display block
                        position absolute
                        bottom 0
                        left 0
                        width 100%
                        padding 6px
                        background rgba(0,0,0,.1)
                        color #fff
                        font-size 13px
                        line-height 15px
                        word-wrap: break-word;
                        box-sizing border-box

                        transition opacity 200ms linear
                        opacity 0

                    .s-link
                        display block
                        position absolute
                        top 0
                        left 0
                        width 100%
                        height 100%