.h-requests-page
    .h-requests-actions
        a
            margin 0 0 0 1em
            text-decoration underline

            &:first-child
                margin-left 0

    .h-requests-list
        margin 0
        padding 1px 0 0

        .h-request-wrapper
            position relative
            margin -1px 0 0 0
            padding $pad() $indent(2)
            list-style none
            border 1px solid rgba(0,0,0,.1)
            transition all linear 200ms

            &:hover
                z-index 1
                box-shadow -2px 2px 10px rgba(0,0,0,.15)
                & + .h-request-wrapper
                    border-top-color transparent

            .h-request-header
                font-size 24px
                line-height 30px

                .h-date
                    color #888

                .h-time
                    color #b2b1b1

                .h-state
                    display inline-block
                    vertical-align top
                    padding 5px 10px
                    min-width 60px
                    text-align center
                    line-height 20px
                    font-size 13px
                    margin 0 $indent() 0 0
                    background #178318
                    color #fff

                    border-radius $radius
                    text-transform uppercase

                    &.new
                        background $getColor("state-new")
                        color #fff

                    &.processing
                        background $getColor("state-processing")
                        color #fff

                    &.archive
                        background $getColor("state-archive")
                        color #fff

                    &.deleted
                        background $getColor("state-deleted")
                        color #fff

                .h-link
                    &:after
                        content ""
                        display block
                        position absolute
                        top 0
                        left 0
                        width 100%
                        height 100%
                        cursor pointer

            .h-request-body
                margin $pad() 0 0