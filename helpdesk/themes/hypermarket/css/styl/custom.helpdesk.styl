@import "nib";

@import "../../../../../site/themes/hypermarket/css/styl/include.styl"

@import "./my.request.styl";

@import "./my.requests.styl";

.s-sidebar-wrapper
    .h-add-request
        text-align center
        &.with-indent
            margin $indent() 0

        .s-button
            width 100%
            margin-top $pad()
            &:first-child
                margin-top 0

.h-category-wrapper
.h-search-page
    .h-faq-list
        margin 0
        .h-faq-wrapper
            $block()
            margin $indent() 0 0
            padding 0
            list-style none
            &:first-child
                margin-top 0

            & > .h-faq-header
                background #fff
                padding 20px 50px

                .h-name
                    font-size 16px
                    line-height 20px
                    color #5f5f5f
                    margin 0

            & > .h-faq-body
                padding 30px 50px
                background $getColor("background-gray")

.h-question-page
    .h-question-section
        $block()

        & > .h-section-header
            background #fff
            padding 20px 50px

            .h-name
                font-size 16px
                line-height 20px
                color #5f5f5f
                margin 0

        & > .h-section-body
            padding 30px 50px
            background $getColor("background-gray")

.h-add-request-page
    .h-request-section
        $block()

        & > .h-section-header
            background #fff
            padding $indent()

            .h-name
                font-size 16px
                line-height 20px
                color #5f5f5f
                margin 0

        & > .h-section-body
            padding $indent()
            background $getColor("background-gray")

    .h-request-form
        iframe
            position absolute

        .wa-form
            margin 0
            width: auto;

            .wa-error-msg
                color red

            .wa-field
                margin 9px 0 0
                color: #888
                padding 0;
                width: auto;

                &:first-of-type
                    margin-top 0
                    .wa-value
                        margin-top 0

                &:last-child
                    margin-bottom 0
                    padding-bottom 0
                    .wa-value
                        margin-bottom 0
                        padding-bottom 0

                .wa-name
                    position relative
                    left 6px;
                    float: none;
                    width: auto;
                    padding 0
                    margin 0

                .wa-value
                    width: auto;
                    padding 0
                    margin 0

                    &.buttons
                        padding-top $indent()
                        line-height 32px

                        .loading
                            top 0
                            vertical-align middle

                    input[type="text"]
                    input[type="password"]
                        width 100%
                        box-shadow 3px 3px 3px -3px rgba(0,0,0,0.1) inset

                        &:not(.error)
                            border-top-color #d0d0d0
                            border-left-color #d0d0d0

                    textarea
                        min-width: 0;
                        width: 100%;
                        height: 70px;
                        resize vertical