.b-post-wrapper
    margin $indent(2) 0 0
    &:first-child
        margin-top 0

    &.is-preview
        .b-post
            $block()
            padding $pad()

            .b-post-title
                $ellipsis()

            .b-credentials
                margin 0
                padding 4px 0 12px

    &:not(.is-preview)
        img
            border-radius $radius

    .b-post
        .b-post-title
            margin 0
            font-size 30px
            line-height 40px

        .b-credentials
            line-height 20px

            .b-user-wrapper
                .b-image
                    margin 0 4px 0 0
                    width 20px
                    height 20px
                    border-radius 50%
                    vertical-align middle

                .b-name
                    font-size 15px
                    font-weight 600
                    line-height 1em

            .b-date
                margin 0 0 0 12px
                color $getColor("gray")

            .b-time
                margin 0 0 0 4px
                color #ccc

        .b-content
            margin $pad() 0 0

            h1
            h2
            h3
            h4
            h5
            h6
                margin $indent() 0 0
                &:first-child
                    margin-top 0

            ul
            ol
                margin $pad() 0
                padding 0 0 0 $pad()
                list-style inherit
                li
                    list-style inherit

            img
                vertical-align top
                max-width: 100%
                height: auto !important

            iframe
                max-width: 100%

            figure
                display block
                margin $pad() 0 0
                &:first-child
                    margin-top 0

        .b-album-wrapper
            margin $indent() 0 0

            .b-album-header
                margin 0 0 8px

            .b-album
                position relative
                display inline-block
                vertical-align top
                width 50%
                max-width (192*2)px

                border solid transparent
                border-width 0 4px 4px 0
                box-sizing border-box

                &:before
                    content: ""
                    position absolute
                    top 0
                    left 0
                    width 100%
                    height 100%
                    background: linear-gradient(to bottom,  rgba(0,0,0,0) 0%,rgba(0,0,0,0.2) 100%);

                .b-image-wrapper
                    width 100%
                    height 0
                    padding-bottom (100*9/16)%
                    background #f0f0f0 50% no-repeat
                    background-size cover

                .b-album-link
                    position absolute
                    top 0
                    left 0
                    width 100%
                    height 100%
                    background transparent
                    cursor pointer

                .b-text-wrapper
                    position absolute
                    bottom 0
                    left 0
                    width 100%
                    padding 1em
                    color #fff
                    box-sizing border-box
                    text-shadow 0 0 1px rgba(0,0,0,.5)
                    white-space nowrap

                    .table
                        display table
                        width 100%
                        table-layout fixed

                        .column
                            display table-cell
                            vertical-align middle

                    .b-album-icon
                        display inline-block
                        width 24px
                        height 24px
                        padding 4px
                        border-radius 50%
                        overflow hidden
                        background #fbfbfb url("../img/icons/album-icon.png") 50% no-repeat
                        background-size 24px
                        box-shadow 0 0 2px rgba(0,0,0,.1), 0 2px 2px rgba(0,0,0,.1)

                    .b-album-text
                        position relative
                        top -1px

                        .b-album-name
                            display inline-block
                            font bold 18px/1em "Trebuchet MS", Arial, sans-serif;

                            width 100%
                            white-space nowrap
                            text-overflow ellipsis
                            overflow hidden

                        .b-album-counter
                            font-size 12px
                            color #f0f0f0
        .b-photo-list
            margin $indent() 0 0
            padding 0

            .b-photo-item
                padding 0
                list-style none

            &.is-preview
                position relative
                font-size 0
                line-height 0
                margin-right $pad(-1)

                .b-photo-item
                    display inline-block
                    vertical-align top
                    width: 24.99%
                    padding: 0 $pad() $pad() 0;
                    box-sizing: border-box;

                    .b-photo
                        display block
                        cursor pointer
                        font-size 0
                        line-height 0

                        .b-image
                            display inline-block
                            vertical-align top
                            width 100% !important
                            height auto !important
                            box-sizing border-box

            &.is-extended
                .b-photo-item
                    margin $indent(2) 0 0
                    &:first-child
                        margin-top 0

                    .b-photo-info
                        margin $pad(.5) 0 0
                        line-height 1.5em
                        color $getColor("gray")

                    .b-photo
                        display block
                        .b-image
                            border 1px solid #ccc;
                            vertical-align top
                            max-width 100%