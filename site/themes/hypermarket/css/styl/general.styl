body
    font-weight normal
    font-size ($rem)px
    line-height (20/$rem)em
    font-family $getFont("text")
    color: $getColor("text")
    background: #fff;

    -webkit-font-smoothing: subpixel-antialiased !important;
    -webkit-backface-visibility: hidden;
    -moz-backface-visibility: hidden;
    -ms-backface-visibility: hidden;

a
    color $getColor("link")
    text-decoration none
    transition color 200ms linear

    //&:visited
    //    color $getColor("link-visited")

    &:hover
        color $getColor("link-hover")

img
iframe
    max-width 100%

// HEADERS

h1
h2
h3
h4
h5
h6
    margin: ($rem * 2)px 0 ($rem)px
    font: 500 1em/1.25 $getFont("header")
    text-transform: none;
    color: #121212;

    &:first-child
        margin-top 0;

    &:last-child
        margin-bottom 0;

h1
    font-size: 30px;

h2
    font-size: 24px;

h3
    font-size: 18px;

h4
    font-size: 18px;

h5
    font-size: 18px;

h6
    font-size: 18px;

// LIST

ul
ol
    margin: 1em 0 1em 2em
    list-style: none;

    li
        list-style: none;
        margin: 0.5em 0 0

        &:first-child
            margin-top: 0

        ul
        ol
            margin: 0.5em 0 0.5em 2em

    &.corrected
        margin 0
        padding 0

        li
            margin 0
            padding 0
            list-style none

ul
    li
        list-style disc

ol
    li
        list-style decimal

p
    margin: 1em 0;
    line-height 1.4em

    &:first-child
        margin-top: 0

    &:last-child
        margin-bottom: 0

figure
    margin: 0

b
strong
.bold
    font-weight 500

pre
    margin: $pad() 0;
    padding $pad()
    border-left 1px solid rgba(0,0,0,.1)
    background rgba(0,0,0,.05)
    color #888;

// FORMS

select
    display inline-block
    width 200px
    height 32px
    border: 1px solid rgba(0, 0, 0, .1);
    border-radius $radius
    box-sizing border-box

input[type="radio"]
input[type="checkbox"]
    display inline-block
    margin 0
    vertical-align baseline
    transform: translate(0, 1px);

input[type="text"]
input[type="search"]
input[type="password"]
input[type="email"]
input[type="url"]
input[type="date"]
input[type="phone"]
input[type="number"]
    display inline-block
    margin: 0;
    width 200px
    height 32px
    padding: 7px 5px 6px
    box-sizing border-box
    border: 1px solid $getColor("border-gray")
    border-radius $radius
    box-shadow inset 1px 1px 1px rgba(0,0,0,.05)

    font: normal 14px/17px $getFont("text")
    text-decoration none
    color: #121212;
    outline none

    &.is-wide
        width 100%

    &.custom-placeholder
        &::-webkit-input-placeholder
            color: #aaa
            font-size 12px
            font-style italic

        &::-moz-placeholder
            color: #aaa
            font-size 12px
            font-style italic

        &:-ms-input-placeholder
            color: #aaa
            font-size 12px
            font-style italic

textarea
    display block
    margin: 0;
    width 100%
    padding: 5px
    box-sizing border-box

    border: 1px solid #bfbfbf
    border-radius $radius

    font: normal 14px/20px $getFont("text")
    text-decoration none
    color: #121212;
    resize vertical
    outline none

// TABLES

table
    border-collapse: collapse
    border-spacing: 0
    border 1px solid #dbdbdb

    th
        font-weight 500

    th
    td
        padding $pad()
        border 1px solid #dfdfdf
        vertical-align top
        text-align left

// OTHERS

.is-hidden
    display none

.is-invisible
    visibility hidden

.strike
    text-decoration: line-through

.nowrap
    white-space: nowrap

.cl
    clearfix()

// WA

.highlighted
    background: #ffc

.userpic
    border-radius 50%

.hint
    color: #aaa
    font-size: 0.9em

    &:visited
    a
    a:visited
        color: #888

// GENERAL

.s-layout
    display table
    width 100%
    box-sizing border-box

    &.fixed
        table-layout fixed

    &.inline
        width auto

    & > .s-column
        display table-cell
        vertical-align top

        &.center
            text-align center

        &.right
            text-align right

        &.middle
            vertical-align middle

.wa-flex-box
    display: flex;

    &.middle
        align-items: center;

    &.wrap
        flex-wrap wrap

    &.full-line
        justify-content: space-between;

    &.fixed
        justify-content: space-between;
        &.fixed > *
            flex-basis: 100%;
            flex-grow: 0;

    & > *
        &.middle
            align-self: center;

    for $i in ("025" "05" "075" 1 2 3 4 5)
        if $i == "025"
            $value = 0.25
        else if $i == "05"
            $value = 0.5
        else if $i == "075"
            $value = 0.75
        else
            $value = $i
        &.space-{$i}
            & > *:not(:last-child)
                margin-right ($value)rem

@media (max-width: $max_w)
    .s-layout
        &.is-adaptive
            display block
            width auto
            & > .s-column
                display block

.s-user-content
    font-size 15px
    line-height 21px

    img
    iframe
        max-width 100%

    ul
        margin 1em 0 1em 1em

        li
            position relative
            padding 0 0 0 14px
            list-style none

            &:before
                content ""
                position absolute
                top 5px
                right 100%
                display: block;
                width 8px
                height 8px
                margin 0 -8px 0 0
                border-radius 50%
                background #f2d458
                box-sizing border-box

    ol
        margin 1em 0 1em 1em

        & > li
            position relative
            padding 0 0 0 14px
            list-style none
            counter-increment: unquote("item")

            &:before
                content: unquote('counter(item) "."');
                position absolute
                top 0
                right 100%
                display: block;
                margin 0 -8px 0 0
                font-weight: bold;
                box-sizing border-box

    table
        th
            font-size 16px
            line-height 28px
            font-weight 600
            background #f9f9f9

.ruble
    font-weight 400 !important

.s-clone-wrapper
    display block
    position absolute
    top 0
    left 0
    opacity 1
    transition 666ms all ease-in-out
    z-index 999

.wa-field
    &.wa-required
        & > .wa-name
            &:after
                content " *"
                color red

.s-styled-dropdown
    $_button_size = 24px
    position relative
    display inline-block
    vertical-align top
    font-size 13px
    line-height $_button_size

    & > .s-visible
        display inline-block
        vertical-align top
        border-radius 2px
        overflow hidden
        line-height ($_button_size - 2)
        padding 0 12px
        border 1px solid rgba(0,0,0,.1)
        color #464646

        &:after
            position relative
            top 4px
            content ""
            display inline-block
            vertical-align baseline
            border solid transparent
            border-width 5px 4px
            border-top-color #464646
            margin 0 0 0 6px

    & > .s-hidden
        display none
        position absolute
        top 100%
        left 0
        min-width 100%
        text-align left
        margin -1px 0 0
        padding 0
        background #fff
        overflow hidden
        border-radius 0 0 2px 2px
        border 1px solid rgba(0,0,0,.1)
        box-sizing border-box

        &.right
            left auto
            right 0

        & > li
            display block
            margin 0
            padding 0
            list-style none
            white-space nowrap

            &.is-active
            &:hover
                background rgba(0, 0, 0, 0.05);

            &.is-active
                a
                    cursor default

            & > a
                display block
                padding 4px 12px
                line-height 16px
                box-sizing border-box

    &:hover
        z-index 1

        .s-sort-active
            border-radius 2px 2px 0 0

        & > .s-hidden
            display block

.s-main-wrapper
    .redactor-toolbar
        z-index 1